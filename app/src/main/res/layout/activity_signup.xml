<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bamx_gdl_logo2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate"
        android:textColor="#DD0031"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/NameeditText"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#DD0031"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Ingresa tu Nombre"
        android:inputType="text"
        android:textColor="#FEFEFE"
        android:textColorHint="#F0970B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/EmailRegistereditText"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#DD0031"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Ingresa tu E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#FEFEFE"
        android:textColorHint="#F0970B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameeditText" />

    <EditText
        android:id="@+id/PasswordRegistereditText"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#DD0031"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Ingresa tu Contraseña"
        android:inputType="textPassword"
        android:textColor="#FEFEFE"
        android:textColorHint="#F0970B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailRegistereditText" />

    <EditText
        android:id="@+id/ConfirmPasswordeditText"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#DD0031"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        android:textColor="#FEFEFE"
        android:textColorHint="#F0970B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordRegistereditText" />

    <EditText
        android:id="@+id/BirthdayeditText"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#DD0031"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Ingrese su fecha de nacimiento (dd/mm/yyyy)"
        android:inputType="date"
        android:minHeight="48dp"
        android:textColor="#FEFEFE"
        android:textColorHint="#F0970B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPasswordeditText" />

    <Button
        android:id="@+id/RegistrarseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DD0031"
        android:fontFamily="sans-serif-medium"
        android:text="Registrarse"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BirthdayeditText" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F0970B"
        android:fontFamily="sans-serif-medium"
        android:text="Regresar"
        android:textColor="#FEFEFE"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegistrarseButton"
        app:layout_constraintVertical_bias="0.133" />

    <CheckBox
        android:id="@+id/verPassword2Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/PasswordRegistereditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PasswordRegistereditText"
        app:layout_constraintVertical_bias="0.600" />


</androidx.constraintlayout.widget.ConstraintLayout>